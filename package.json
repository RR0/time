{
  "name": "@rr0/time",
  "type": "module",
  "version": "0.3.2",
  "author": "RR0 <rr0@rr0.org>",
  "description": "EDTF parsing",
  "main": "src/index.js",
  "types": "types/*.d.mts",
  "scripts": {
    "prebuild": "npm test",
    "build": "rimraf ./types && ./node_modules/typescript/bin/tsc src/**/*.?js --declaration --allowJs --emitDeclarationOnly --outDir types",
    "test": "node --test",
    "test-ci": "node --test --experimental-test-coverage --test-reporter spec",
    "prepublishOnly": "npm run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "typescript": "^5.6.2",
    "tsc": "^2.0.4"
  }
}
